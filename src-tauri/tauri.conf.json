{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tax calculator tm",
  "version": "1.0.0",
  "identifier": "tax-tm",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Расчет суммы налога",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/hand-coins.png"
    ]
  }
}
